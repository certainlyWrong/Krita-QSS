/* Windows 11 Sunset Color Scheme - Qt Style Sheet */
/* Baseado em Windows11Sunset.colors */

/* ===== CORES PRINCIPAIS ===== */
/* Background Normal (Window): #373c4b (55,60,75) */
/* Background Alternate (Window): #20232c (32,35,44) */
/* Background Normal (Button): #20232c (32,35,44) */
/* Background Alternate (Button): #828282 (130,130,130) */
/* Foreground Normal: #fafafa (250,250,250) */
/* Decoration Focus: #373c4b (55,60,75) / #315bef (49,91,239) */
/* Decoration Hover: #e66464 (230,100,100) */
/* Selection Background: #e66464 (230,100,100) */
/* Selection Alternate: #4f7fef (79,127,239) */
/* Foreground Active: #3daee9 (61,174,233) / #315bef (49,91,239) */
/* Foreground Link: #2980b9 (41,128,185) / #315bef (49,91,239) */

/* ===== ESTILOS GLOBAIS ===== */
* {
    color: #fafafa;
    background-color: #373c4b;
    selection-background-color: #e66464;
    selection-color: #ffffff;
}

/* ===== JANELA PRINCIPAL ===== */
QMainWindow {
    background-color: #373c4b;
    color: #fafafa;
}

/* ===== WIDGETS DE TEXTO ===== */
QLineEdit, QTextEdit, QPlainTextEdit, QSpinBox, QDoubleSpinBox, QComboBox {
    background-color: #20232c;
    color: #fafafa;
    border: 1px solid #828282;
    border-radius: 4px;
    padding: 4px;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus,
QSpinBox:focus, QDoubleSpinBox:focus, QComboBox:focus {
    border: 2px solid #373c4b;
}

QLineEdit:hover, QTextEdit:hover, QPlainTextEdit:hover,
QSpinBox:hover, QDoubleSpinBox:hover, QComboBox:hover {
    border: 1px solid #e66464;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled,
QSpinBox:disabled, QDoubleSpinBox:disabled, QComboBox:disabled {
    background-color: #20232c;
    color: #bdc3c7;
    border: 1px solid #828282;
}

/* ===== BOTÕES ===== */
QPushButton {
    background-color: #20232c;
    color: #fafafa;
    border: 1px solid #828282;
    border-radius: 4px;
    padding: 6px 12px;
    min-height: 20px;
}

QPushButton:hover {
    background-color: #828282;
    border: 1px solid #e66464;
}

QPushButton:pressed {
    background-color: #e66464;
    border: 1px solid #e66464;
}

QPushButton:focus {
    border: 2px solid #373c4b;
}

QPushButton:disabled {
    background-color: #20232c;
    color: #bdc3c7;
    border: 1px solid #828282;
}

/* ===== CHECKBOX E RADIO BUTTON ===== */
QCheckBox, QRadioButton {
    color: #fafafa;
    spacing: 5px;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #828282;
    border-radius: 3px;
    background-color: #20232c;
}

QCheckBox::indicator:hover, QRadioButton::indicator:hover {
    border: 1px solid #e66464;
    background-color: #828282;
}

QCheckBox::indicator:checked {
    background-color: #373c4b;
    border: 1px solid #373c4b;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0iTTQgOEw3IDExTDEyIDYiIHN0cm9rZT0iI2ZhZmFmYSIgc3Ryb2tlLXdpZHRoPSIyIiBmaWxsPSJub25lIiBzdHJva2UtbGluZWNhcD0icm91bmQiLz48L3N2Zz4=);
}

QRadioButton::indicator {
    border-radius: 8px;
}

QRadioButton::indicator:checked {
    background-color: #373c4b;
    border: 1px solid #373c4b;
}

QCheckBox:disabled, QRadioButton:disabled {
    color: #bdc3c7;
}

QCheckBox::indicator:disabled, QRadioButton::indicator:disabled {
    background-color: #20232c;
    border: 1px solid #828282;
}

/* ===== SCROLLBAR ===== */
QScrollBar:vertical {
    background-color: #20232c;
    width: 12px;
    border: none;
}

QScrollBar::handle:vertical {
    background-color: #828282;
    min-height: 20px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: #e66464;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #20232c;
    height: 12px;
    border: none;
}

QScrollBar::handle:horizontal {
    background-color: #828282;
    min-width: 20px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #e66464;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* ===== MENU ===== */
QMenuBar {
    background-color: #373c4b;
    color: #fafafa;
    border-bottom: 1px solid #828282;
}

QMenuBar::item {
    background-color: transparent;
    padding: 4px 8px;
}

QMenuBar::item:selected {
    background-color: #20232c;
    border: 1px solid #e66464;
    border-radius: 3px;
}

QMenu {
    background-color: #20232c;
    color: #fafafa;
    border: 1px solid #828282;
    border-radius: 4px;
}

QMenu::item {
    padding: 6px 24px 6px 8px;
}

QMenu::item:selected {
    background-color: #e66464;
    color: #ffffff;
}

QMenu::item:disabled {
    color: #bdc3c7;
}

QMenu::separator {
    height: 1px;
    background-color: #828282;
    margin: 4px 8px;
}

/* ===== TOOLBAR ===== */
QToolBar {
    background-color: #373c4b;
    border: 1px solid #828282;
    spacing: 3px;
    padding: 2px;
}

QToolBar::separator {
    background-color: #828282;
    width: 1px;
    margin: 2px 4px;
}

QToolButton {
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 3px;
    padding: 4px;
}

QToolButton:hover {
    background-color: #20232c;
    border: 1px solid #e66464;
}

QToolButton:pressed {
    background-color: #e66464;
}

/* ===== TAB WIDGET ===== */
QTabWidget::pane {
    background-color: #373c4b;
    border: 1px solid #828282;
    border-radius: 4px;
}

QTabBar::tab {
    background-color: #20232c;
    color: #fafafa;
    border: 1px solid #828282;
    border-bottom: none;
    padding: 6px 12px;
    margin-right: 2px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QTabBar::tab:hover {
    background-color: #828282;
}

QTabBar::tab:selected {
    background-color: #373c4b;
    border-bottom: 1px solid #373c4b;
    color: #3daee9;
}

/* ===== LISTA E ÁRVORE ===== */
QListWidget, QTreeWidget, QTreeView, QListView {
    background-color: #373c4b;
    color: #eaeaea;
    border: 1px solid #828282;
    border-radius: 4px;
    alternate-background-color: #373c4b;
}

QListWidget::item, QTreeWidget::item {
    padding: 4px;
}

QListWidget::item:selected, QTreeWidget::item:selected {
    background-color: #e66464;
    color: #ffffff;
}

QListWidget::item:hover, QTreeWidget::item:hover {
    background-color: #20232c;
}

QListWidget::item:selected:hover, QTreeWidget::item:selected:hover {
    background-color: #4f7fef;
}

/* ===== TABLE ===== */
QTableWidget, QTableView {
    background-color: #373c4b;
    color: #eaeaea;
    border: 1px solid #828282;
    border-radius: 4px;
    alternate-background-color: #373c4b;
    gridline-color: #828282;
}

QTableWidget::item, QTableView::item {
    padding: 4px;
}

QTableWidget::item:selected, QTableView::item:selected {
    background-color: #e66464;
    color: #ffffff;
}

QHeaderView::section {
    background-color: #20232c;
    color: #fafafa;
    padding: 6px;
    border: 1px solid #828282;
    border-left: none;
    border-top: none;
}

QHeaderView::section:hover {
    background-color: #828282;
}

QHeaderView::section:pressed {
    background-color: #e66464;
}

/* ===== PROGRESS BAR ===== */
QProgressBar {
    background-color: #20232c;
    border: 1px solid #828282;
    border-radius: 4px;
    text-align: center;
    color: #fafafa;
    height: 20px;
}

QProgressBar::chunk {
    background-color: #3daee9;
    border-radius: 3px;
}

/* ===== SLIDER ===== */
QSlider::groove:horizontal {
    background-color: #20232c;
    height: 6px;
    border-radius: 3px;
    border: 1px solid #828282;
}

QSlider::handle:horizontal {
    background-color: #e66464;
    width: 16px;
    height: 16px;
    margin: -6px 0;
    border-radius: 8px;
    border: 1px solid #828282;
}

QSlider::handle:horizontal:hover {
    background-color: #3daee9;
    border: 1px solid #315bef;
}

QSlider::groove:vertical {
    background-color: #20232c;
    width: 6px;
    border-radius: 3px;
    border: 1px solid #828282;
}

QSlider::handle:vertical {
    background-color: #e66464;
    width: 16px;
    height: 16px;
    margin: 0 -6px;
    border-radius: 8px;
    border: 1px solid #828282;
}

QSlider::handle:vertical:hover {
    background-color: #3daee9;
    border: 1px solid #315bef;
}

/* ===== COMBOBOX ===== */
QComboBox::drop-down {
    border: none;
    width: 20px;
    background-color: #20232c;
    border-left: 1px solid #828282;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}

QComboBox::down-arrow {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iOCIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCBkPSJNMSAxTDYgNkwxMSAxIiBzdHJva2U9IiNmYWZhZmEiIHN0cm9rZS13aWR0aD0iMiIgZmlsbD0ibm9uZSIgc3Ryb2tlLWxpbmVjYXA9InJvdW5kIi8+PC9zdmc+);
    width: 12px;
    height: 8px;
}

QComboBox QAbstractItemView {
    background-color: #20232c;
    color: #fafafa;
    border: 1px solid #828282;
    selection-background-color: #e66464;
    selection-color: #ffffff;
}

/* ===== TOOLTIP ===== */
QToolTip {
    background-color: #20232c;
    color: #dedede;
    border: 1px solid #828282;
    border-radius: 4px;
    padding: 4px;
}

/* ===== SPLITTER ===== */
QSplitter::handle {
    background-color: #828282;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:hover {
    background-color: #e66464;
}

/* ===== GROUPBOX ===== */
QGroupBox {
    border: 1px solid #828282;
    border-radius: 4px;
    margin-top: 8px;
    padding-top: 8px;
    color: #fafafa;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 4px;
    color: #3daee9;
}

/* ===== DOCK WIDGET ===== */
QDockWidget {
    background-color: #373c4b;
    color: #fafafa;
    titlebar-close-icon: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0iTTEyIDRMMTAgNkw2IDJMMiA2TDQgOEwyIDZMMiAxMEw2IDE0TDQgMTJMMTYgNEwxMiA0WiIgZmlsbD0iI2ZhZmFmYSIvPjwvc3ZnPg==);
    titlebar-normal-icon: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0iTTggNEwxMiA4TDggMTJMMTAgMTRMMTYgOEwxMCAyTDggNFoiIGZpbGw9IiNmYWZhZmEiLz48L3N2Zz4=);
}

QDockWidget::title {
    background-color: #20232c;
    padding: 4px;
    border-bottom: 1px solid #828282;
}

/* ===== STATUS BAR ===== */
QStatusBar {
    background-color: #373c4b;
    color: #fafafa;
    border-top: 1px solid #828282;
}

/* ===== LINKS ===== */
QLabel[class="link"] {
    color: #2980b9;
    text-decoration: underline;
}

QLabel[class="link"]:hover {
    color: #315bef;
}

/* ===== MENSAGENS ===== */
/* Positivo */
QLabel[class="positive"] {
    color: #27ae60;
}

/* Negativo */
QLabel[class="negative"] {
    color: #da4453;
}

/* Neutro */
QLabel[class="neutral"] {
    color: #f67400;
}

/* ===== ESTILOS ADICIONAIS ===== */
/* Active/Selected text color */
QAbstractItemView::item:selected {
    color: #ffffff;
}

/* Inactive text */
QAbstractItemView::item:disabled {
    color: #bdc3c7;
}

/* Focus indicator */
QAbstractItemView {
    outline: 1px solid #315bef;
    outline-offset: -1px;
}

