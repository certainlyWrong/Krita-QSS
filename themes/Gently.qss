/* Gently Color Scheme - Qt Style Sheet */
/* Based on Gently.colors */

/* ===== MAIN COLORS ===== */
/* Background Normal (Window): #050E15 (5,14,21) */
/* Background Alternate (Window): #050E15 (5,14,21) */
/* Background Normal (Button): #050E15 (5,14,21) */
/* Background Alternate (Button): #0084C6 (0,132,198) */
/* Background Normal (View): #050E15 (5,14,21) */
/* Foreground Normal: #D7F1F8 (215,241,248) */
/* Decoration Focus: #035781 (3,87,129) */
/* Decoration Hover: #034D6F (3,77,111) */
/* Selection Background: #058BCE (5,139,206) */
/* Foreground Active: #A1B4BA (161,180,186) */
/* Foreground Link: #75AAE0 (117,170,224) */
/* Foreground Negative: #AA0000 (170,0,0) */
/* Foreground Neutral: #01587D (1,88,125) */
/* Foreground Positive: #A1B4BA (161,180,186) */

/* ===== GLOBAL STYLES ===== */
* {
    color: #D7F1F8;
    background-color: #050E15;
    selection-background-color: #058BCE;
    selection-color: #DBDBFF;
}

/* ===== MAIN WINDOW ===== */
QMainWindow {
    background-color: #050E15;
    color: #D7F1F8;
}

/* ===== TEXT WIDGETS ===== */
QLineEdit, QTextEdit, QPlainTextEdit, QSpinBox, QDoubleSpinBox, QComboBox {
    background-color: #050E15;
    color: #D7F1F8;
    border: 1px solid #035781;
    border-radius: 4px;
    padding: 4px;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus,
QSpinBox:focus, QDoubleSpinBox:focus, QComboBox:focus {
    border: 2px solid #035781;
}

QLineEdit:hover, QTextEdit:hover, QPlainTextEdit:hover,
QSpinBox:hover, QDoubleSpinBox:hover, QComboBox:hover {
    border: 1px solid #034D6F;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled,
QSpinBox:disabled, QDoubleSpinBox:disabled, QComboBox:disabled {
    background-color: #050E15;
    color: #9399B1;
    border: 1px solid #035781;
}

/* ===== BUTTONS ===== */
QPushButton {
    background-color: #050E15;
    color: #D7F1F8;
    border: 1px solid #035781;
    border-radius: 4px;
    padding: 6px 12px;
    min-height: 20px;
}

QPushButton:hover {
    background-color: #0084C6;
    border: 1px solid #034D6F;
}

QPushButton:pressed {
    background-color: #058BCE;
    border: 1px solid #035781;
}

QPushButton:focus {
    border: 2px solid #035781;
}

QPushButton:disabled {
    background-color: #050E15;
    color: #9399B1;
    border: 1px solid #035781;
}

/* ===== CHECKBOX AND RADIO BUTTON ===== */
QCheckBox, QRadioButton {
    color: #D7F1F8;
    spacing: 5px;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #035781;
    border-radius: 3px;
    background-color: #050E15;
}

QCheckBox::indicator:hover, QRadioButton::indicator:hover {
    border: 1px solid #034D6F;
    background-color: #0084C6;
}

QCheckBox::indicator:checked {
    background-color: #058BCE;
    border: 1px solid #035781;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0iTTQgOEw3IDExTDEyIDYiIHN0cm9rZT0iI0Q3RjFGOCIgc3Ryb2tlLXdpZHRoPSIyIiBmaWxsPSJub25lIiBzdHJva2UtbGluZWNhcD0icm91bmQiLz48L3N2Zz4=);
}

QRadioButton::indicator {
    border-radius: 8px;
}

QRadioButton::indicator:checked {
    background-color: #058BCE;
    border: 1px solid #035781;
}

QCheckBox:disabled, QRadioButton:disabled {
    color: #9399B1;
}

QCheckBox::indicator:disabled, QRadioButton::indicator:disabled {
    background-color: #050E15;
    border: 1px solid #035781;
}

/* ===== SCROLLBAR ===== */
QScrollBar:vertical {
    background-color: #050E15;
    width: 12px;
    border: none;
}

QScrollBar::handle:vertical {
    background-color: #035781;
    min-height: 20px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: #034D6F;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #050E15;
    height: 12px;
    border: none;
}

QScrollBar::handle:horizontal {
    background-color: #035781;
    min-width: 20px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #034D6F;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* ===== MENU ===== */
QMenuBar {
    background-color: #050E15;
    color: #D7F1F8;
    border-bottom: 1px solid #035781;
}

QMenuBar::item {
    background-color: transparent;
    padding: 4px 8px;
}

QMenuBar::item:selected {
    background-color: #0084C6;
    border: 1px solid #034D6F;
    border-radius: 3px;
}

QMenu {
    background-color: #050E15;
    color: #D7F1F8;
    border: 1px solid #035781;
    border-radius: 4px;
}

QMenu::item {
    padding: 6px 24px 6px 8px;
}

QMenu::item:selected {
    background-color: #058BCE;
    color: #DBDBFF;
}

QMenu::item:disabled {
    color: #9399B1;
}

QMenu::separator {
    height: 1px;
    background-color: #035781;
    margin: 4px 8px;
}

/* ===== TOOLBAR ===== */
QToolBar {
    background-color: #050E15;
    border: 1px solid #035781;
    spacing: 3px;
    padding: 2px;
}

QToolBar::separator {
    background-color: #035781;
    width: 1px;
    margin: 2px 4px;
}

QToolButton {
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 3px;
    padding: 4px;
}

QToolButton:hover {
    background-color: #0084C6;
    border: 1px solid #034D6F;
}

QToolButton:pressed {
    background-color: #058BCE;
}

/* ===== TAB WIDGET ===== */
QTabWidget::pane {
    background-color: #050E15;
    border: 1px solid #035781;
    border-radius: 4px;
}

QTabBar::tab {
    background-color: #050E15;
    color: #D7F1F8;
    border: 1px solid #035781;
    border-bottom: none;
    padding: 6px 12px;
    margin-right: 2px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QTabBar::tab:hover {
    background-color: #0084C6;
}

QTabBar::tab:selected {
    background-color: #050E15;
    border-bottom: 1px solid #050E15;
    color: #A1B4BA;
}

/* ===== LIST AND TREE ===== */
QListWidget, QTreeWidget, QTreeView, QListView {
    background-color: #050E15;
    color: #D7F1F8;
    border: 1px solid #035781;
    border-radius: 4px;
    alternate-background-color: #050E15;
}

QListWidget::item, QTreeWidget::item {
    padding: 4px;
}

QListWidget::item:selected, QTreeWidget::item:selected {
    background-color: #058BCE;
    color: #DBDBFF;
}

QListWidget::item:hover, QTreeWidget::item:hover {
    background-color: #0084C6;
}

QListWidget::item:selected:hover, QTreeWidget::item:selected:hover {
    background-color: #06ACFF;
}

/* ===== TABLE ===== */
QTableWidget, QTableView {
    background-color: #050E15;
    color: #D7F1F8;
    border: 1px solid #035781;
    border-radius: 4px;
    alternate-background-color: #050E15;
    gridline-color: #035781;
}

QTableWidget::item, QTableView::item {
    padding: 4px;
}

QTableWidget::item:selected, QTableView::item:selected {
    background-color: #058BCE;
    color: #DBDBFF;
}

QHeaderView::section {
    background-color: #050E15;
    color: #D7F1F8;
    padding: 6px;
    border: 1px solid #035781;
    border-left: none;
    border-top: none;
}

QHeaderView::section:hover {
    background-color: #0084C6;
}

QHeaderView::section:pressed {
    background-color: #058BCE;
}

/* ===== PROGRESS BAR ===== */
QProgressBar {
    background-color: #050E15;
    border: 1px solid #035781;
    border-radius: 4px;
    text-align: center;
    color: #D7F1F8;
    height: 20px;
}

QProgressBar::chunk {
    background-color: #058BCE;
    border-radius: 3px;
}

/* ===== SLIDER ===== */
QSlider::groove:horizontal {
    background-color: #050E15;
    height: 6px;
    border-radius: 3px;
    border: 1px solid #035781;
}

QSlider::handle:horizontal {
    background-color: #058BCE;
    width: 16px;
    height: 16px;
    margin: -6px 0;
    border-radius: 8px;
    border: 1px solid #035781;
}

QSlider::handle:horizontal:hover {
    background-color: #06ACFF;
    border: 1px solid #034D6F;
}

QSlider::groove:vertical {
    background-color: #050E15;
    width: 6px;
    border-radius: 3px;
    border: 1px solid #035781;
}

QSlider::handle:vertical {
    background-color: #058BCE;
    width: 16px;
    height: 16px;
    margin: 0 -6px;
    border-radius: 8px;
    border: 1px solid #035781;
}

QSlider::handle:vertical:hover {
    background-color: #06ACFF;
    border: 1px solid #034D6F;
}

/* ===== COMBOBOX ===== */
QComboBox::drop-down {
    border: none;
    width: 20px;
    background-color: #050E15;
    border-left: 1px solid #035781;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}

QComboBox::down-arrow {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iOCIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCBkPSJNMSAxTDYgNkwxMSAxIiBzdHJva2U9IiNEN0YxRjgiIHN0cm9rZS13aWR0aD0iMiIgZmlsbD0ibm9uZSIgc3Ryb2tlLWxpbmVjYXA9InJvdW5kIi8+PC9zdmc+);
    width: 12px;
    height: 8px;
}

QComboBox QAbstractItemView {
    background-color: #050E15;
    color: #D7F1F8;
    border: 1px solid #035781;
    selection-background-color: #058BCE;
    selection-color: #DBDBFF;
}

/* ===== TOOLTIP ===== */
QToolTip {
    background-color: #050E15;
    color: #D7F1F8;
    border: 1px solid #035781;
    border-radius: 4px;
    padding: 4px;
}

/* ===== SPLITTER ===== */
QSplitter::handle {
    background-color: #035781;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:hover {
    background-color: #034D6F;
}

/* ===== GROUPBOX ===== */
QGroupBox {
    border: 1px solid #035781;
    border-radius: 4px;
    margin-top: 8px;
    padding-top: 8px;
    color: #D7F1F8;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 4px;
    color: #A1B4BA;
}

/* ===== DOCK WIDGET ===== */
QDockWidget {
    background-color: #050E15;
    color: #D7F1F8;
    titlebar-close-icon: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0iTTEyIDRMMTAgNkw2IDJMMiA2TDQgOEwyIDZMMiAxMEw2IDE0TDQgMTJMMTYgNEwxMiA0WiIgZmlsbD0iI0Q3RjFGOCIvPjwvc3ZnPg==);
    titlebar-normal-icon: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0iTTggNEwxMiA4TDggMTJMMTAgMTRMMTYgOEwxMCAyTDggNFoiIGZpbGw9IiNEN0YxRjgiLz48L3N2Zz4=);
}

QDockWidget::title {
    background-color: #050E15;
    padding: 4px;
    border-bottom: 1px solid #035781;
}

/* ===== STATUS BAR ===== */
QStatusBar {
    background-color: #050E15;
    color: #D7F1F8;
    border-top: 1px solid #035781;
}

/* ===== LINKS ===== */
QLabel[class="link"] {
    color: #75AAE0;
    text-decoration: underline;
}

QLabel[class="link"]:hover {
    color: #A1B4BA;
}

/* ===== MESSAGES ===== */
/* Positive */
QLabel[class="positive"] {
    color: #A1B4BA;
}

/* Negative */
QLabel[class="negative"] {
    color: #AA0000;
}

/* Neutral */
QLabel[class="neutral"] {
    color: #01587D;
}

/* ===== ADDITIONAL STYLES ===== */
/* Active/Selected text color */
QAbstractItemView::item:selected {
    color: #DBDBFF;
}

/* Inactive text */
QAbstractItemView::item:disabled {
    color: #9399B1;
}

/* Focus indicator */
QAbstractItemView {
    outline: 1px solid #035781;
    outline-offset: -1px;
}

/* ===== DIALOG ===== */
QDialog {
    background-color: #050E15;
    color: #D7F1F8;
}

/* ===== MESSAGE BOX ===== */
QMessageBox {
    background-color: #050E15;
    color: #D7F1F8;
}

QMessageBox QPushButton {
    min-width: 80px;
}

/* ===== SPINBOX ARROWS ===== */
QSpinBox::up-button, QDoubleSpinBox::up-button {
    background-color: #050E15;
    border: 1px solid #035781;
    border-top-right-radius: 4px;
    width: 16px;
}

QSpinBox::up-button:hover, QDoubleSpinBox::up-button:hover {
    background-color: #0084C6;
    border: 1px solid #034D6F;
}

QSpinBox::down-button, QDoubleSpinBox::down-button {
    background-color: #050E15;
    border: 1px solid #035781;
    border-bottom-right-radius: 4px;
    width: 16px;
}

QSpinBox::down-button:hover, QDoubleSpinBox::down-button:hover {
    background-color: #0084C6;
    border: 1px solid #034D6F;
}

/* ===== HEADER VIEW ===== */
QHeaderView::section:first {
    border-left: 1px solid #035781;
}

/* ===== LIST VIEW ITEM HOVER ===== */
QListView::item:hover {
    background-color: #0084C6;
}

QListView::item:selected {
    background-color: #058BCE;
    color: #DBDBFF;
}

QListView::item:selected:hover {
    background-color: #06ACFF;
}

